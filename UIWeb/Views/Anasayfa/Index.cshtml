<!-- ======= Hero Section ======= -->
<section id="hero" class="d-flex flex-column justify-content-center">
    <div class="container" data-aos="zoom-in" data-aos-delay="100">
        <h1>@Model.Name</h1>
        <p>I'm <span class="typed" data-typed-items="Junior, Developer, Freelancer"></span></p>
        <div class="social-links">
            <a href="https://twitter.com/@Model.Twitter" class="twitter"><i class="bx bxl-twitter"></i></a>
            <a href="https://github.com/@Model.Github" class="github"><i class="bx bxl-github"></i></a>
            <a href="https://www.instagram.com/@Model.Instagram" class="instagram"><i class="bx bxl-instagram"></i></a>
            <a href="https://www.linkedin.com/in/emir-yavuz-3b109923b" class="linkedin"><i class="bx bxl-linkedin"></i></a>
        </div>
    </div>
</section><!-- End Hero -->

<main id="main">

    <!-- ======= About Section ======= -->
    <section id="about" class="about">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>About</h2>
                <p>Hello, I'm Emir. I wanted to show you my projects in the field of software and the languages I know on this site.</p>
            </div>

            <div class="row">
                <div class="col-lg-4">
                    <img src="/images/@Model.ProfilPhoto" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 pt-4 pt-lg-0 content">
                    <h3>Back-end Developer &amp; Web Developer.</h3>
                    <p class="fst-italic">

                    </p>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>@Model.BornDate.ToString("dd/MM/yyyy")</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>www.emiry.com</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>+90 @Model.Phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@Model.Country</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@(DateTime.Now.Year - Model.BornDate.Year)</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span>@Model.Level</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>not available</span></li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </section><!-- End About Section -->
