    <!-- ======= Resume Section ======= -->
    <section id="resume" class="resume">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Resume</h2>
                <p>Information about the Schools I Attended and My Working Life is in this section.</p>
            </div>

            <div class="row">
                <div class="col-lg-6">


                    <h3 class="resume-title">Education</h3>
                    @foreach (var item in Model.egitim)
                    {
                    <div class="resume-item">
                        <h4>@item.OkulAdi</h4>
                            <h5>@item.BaslamaYili.ToString("dd/MM/yyyy") - @item.MezuniyetYili.ToString("dd/MM/yyyy")</h5>
                        
                        <p>@item.BolumAdi</p>
                    </div>
                    }
                   
                </div>
                <div class="col-lg-6">
                    <h3 class="resume-title">First Experience</h3>
                    <div class="resume-item">
                        <h4>Junior Back-and Developer</h4>
                        <h5>2022-2022</h5>
                        <p><em>Infotech Academy, Istanbul, Turkey</em></p>
                        <ul>
                            <li>I had 2 months of work experience in the project development part of the course I had previously received c# back-and training.</li>
                            <li> This job was just for us to learn teamwork and prove ourselves that's why it took so long. </li>


                        </ul>
                    </div>

                </div>
            </div>

        </div>
    </section><!-- End Resume Section -->
    <!-- ======= Portfolio Section ======= -->
    <section id="portfolio" class="portfolio section-bg">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Portfolio</h2>
                <p>Check Out My Previous Projects</p>
            </div>

            <div class="row">
                <div class="col-lg-12 d-flex justify-content-center" data-aos="fade-up" data-aos-delay="100">
                    <ul id="portfolio-flters">
                        <li data-filter="*" class="filter-active">All</li>
                        <li data-filter=".filter-FullStack">Full Stack</li>
                        <li data-filter=".filter-BackEnd">Back-End</li>
                        <li data-filter=".filter-FrontEnd">Front-End</li>
                    </ul>
                </div>
            </div>

            <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
                @foreach (var item in Model.projeler)
                {
                    if (item.ProjeCategory=="Full Stack")
                    {
                        
                    
               
                <div class="col-lg-4 col-md-6 portfolio-item filter-FullStack">
                    <div class="portfolio-wrap">
                        <img src="/images/@item.ProjePhoto" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>@item.ProjeAdi</h4>
                                <p>@item.ProjeAmaci</p>
                            <div class="portfolio-links">
                                <a href="/images/@item.ProjePhoto" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.ProjeAmaci"><i class="bx bx-plus"></i></a>
                               
                            </div>
                        </div>
                    </div>
                </div>
                    }
                }   @foreach (var item in Model.projeler)
                {
                    if (item.ProjeCategory=="Back-End")
                    {
                        
                    
               
                <div class="col-lg-4 col-md-6 portfolio-item filter-BackEnd">
                    <div class="portfolio-wrap">
                        <img src="/images/@item.ProjePhoto" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>@item.ProjeAdi</h4>
                                <p>@item.ProjeAmaci</p>
                            <div class="portfolio-links">
                                <a href="/images/@item.ProjePhoto" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.ProjeAmaci"><i class="bx bx-plus"></i></a>
                                
                            </div>
                        </div>
                    </div>
                </div>
                    }
                }   @foreach (var item in Model.projeler)
                {
                    if (item.ProjeCategory=="Front-End")
                    {
                        
                    
               
                <div class="col-lg-4 col-md-6 portfolio-item filter-FrontEnd">
                    <div class="portfolio-wrap">
                        <img src="/images/@item.ProjePhoto" class="img-fluid" alt="">
                        <div class="portfolio-info">
                            <h4>@item.ProjeAdi</h4>
                                <p>@item.ProjeAmaci</p>
                            <div class="portfolio-links">
                                <a href="/images/@item.ProjePhoto" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.ProjeAmaci"><i class="bx bx-plus"></i></a>
                               
                            </div>
                        </div>
                    </div>
                </div>
                    }
                }


            </div>

        </div>
    </section><!-- End Portfolio Section -->
    <!-- ======= Services Section ======= -->
    <section id="services" class="services">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Services</h2>
                <p>You can take a look at my services to find out what I can do.</p>
            </div>

            <div class="row">
                @foreach (var item in Model.servisler)
                {
                    
               
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                    <div class="icon-box iconbox-blue">
                        <div class="icon">
                                <img width="100" height="100" viewBox="0 0 600 600" src="~/images/@item.ServisFoto" />
                         
                        </div>
                        <h4><a>@item.ServisAdi</a></h4>
                            <p>@item.ServisAciklama</p>
                    </div>
                </div>
                }

              

            </div>

        </div>
    </section><!-- End Services Section -->
