<div class="container">
    <a href="/admin/ProjeBilgi/Insert" class="btn btn-primary" style="margin-bottom:15px">Yeni Ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td>Proje Foto</td>
                <td>Proje Adı</td>
                <td>Proje Amacı</td>
                <td>Proje Kategorisi</td>
                <td>Projenin Yapıldığı Kurum</td>
                <td>Projenin Alan Adı</td>
                <td>Projenin Yapıldığı Tarih</td>
                <td>İşlemler</td>
            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><img style="width:50px;" src="/images/@item.ProjePhoto"></td>
                    <td>@item.ProjeAdi</td>
                    <td>@item.ProjeAmaci</td>
                    <td>@item.ProjeCategory</td>
                    <td>@item.ProjeninYapildigiKurum</td>
                    <td>@item.ProjeAlanAdi</td>
                    <td>@item.YapilisTarihi.ToString("dd-MM-yyyy")</td>
                    
                    <td>
                        <a href="/admin/ProjeBilgi/update/@item.Id" class="btn btn-primary">Güncelle</a>
                        <a href="/admin/ProjeBilgi/delete/@item.Id" class="btn btn-success">Sil</a>


                    </td>

                </tr>
            }


        </tbody>

    </table>
</div>