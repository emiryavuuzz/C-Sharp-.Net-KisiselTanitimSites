@model DataAccess.Models.Servisler

<div class="container">
    <form action="/admin/ServisBilgi/Insert" method="post" enctype="multipart/form-data">
        <input type="file" class="form-control" style="margin-bottom:10px;" placeholder="Servis Foto" name="file" />
        <input type="text" class="form-control" style="margin-bottom:10px;" placeholder="Servis Adı" asp-for="ServisAdi" />
        <textarea class="form-control" style="margin-bottom:10px;" placeholder="Servis Açıklama" asp-for="ServisAciklama" ></textarea>
       

        <button type="submit" class="form-control btn btn-primary">Ekleme Yap</button>

    </form>

    @if (ViewBag.Message != null)
    {
                <div class="alert alert-success" style="margin-top:15px">@ViewBag.Message</div>

    }
</div>